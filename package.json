{
  "name": "aws-spa-hosting-kit",
  "version": "1.0.2",
  "description": "Infrastructure-as-code kit for hosting Single Page Applications on AWS with automated CI/CD",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:property": "jest --testPathPattern=property",
    "cdk": "npx cdk",
    "deploy": "npm run build && npx cdk deploy",
    "destroy": "npx cdk destroy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rusty428/aws-spa-hosting-kit.git"
  },
  "keywords": [
    "aws",
    "cdk",
    "spa",
    "hosting",
    "cloudfront",
    "s3",
    "codepipeline",
    "infrastructure"
  ],
  "author": "Rusty Nations",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rusty428/aws-spa-hosting-kit/issues"
  },
  "homepage": "https://github.com/rusty428/aws-spa-hosting-kit#readme",
  "dependencies": {
    "aws-cdk-lib": "^2.238.0",
    "constructs": "^10.4.5",
    "js-yaml": "^4.1.1",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.3",
    "aws-cdk": "^2.1105.0",
    "fast-check": "^4.5.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
